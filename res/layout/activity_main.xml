    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg01"
    tools:context="${packageName}.${activityClass}"
>

   <!--<ImageView
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
